this.fn_fir_code_new = function(){

	var id = "fn_fir_code_new";
	var url = "svc::fir_code_new.do";
	var set = "";
	var get = "fir_code_new = fir_code_new";
	var arg = "";
	var callback ="codemanagement";
	
	this.transaction(id, url, set, get, arg, callback)

}
/***************************************************************************************/
