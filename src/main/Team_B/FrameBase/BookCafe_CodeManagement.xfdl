	this.transaction(id, url, set, get, arg, callback)
};


/***************************************************************************************/
								//상위코드 콤보 선택 시
/***************************************************************************************/

this.Main_fir_category_onitemchanged = function(val)
{	
	
	//콤보로 선택했다면
	if(val == this.Main.form.fir_category){
	
	val = this.Main.form.fir_category.value;
	
	}else {// 그리드 셀 선택 시
	
		this.Main.form.fir_category.set_value(val)
		val = this.Main.form.fir_category.value
	}
	
	var id = "fir_category";
	var url = "svc::fir_category.do";
	var set = "";
	var get = "sec_code_grid = sec_code_grid";
	var arg = "fir_category=" + val;
	var callback ="codemanagement";
	
	this.transaction(id, url, set, get, arg, callback)
	
	
};

/***************************************************************************************/
								//상위코드 그리드 셀 선택 시
/***************************************************************************************/

this.Main_Fir_code_oncellclick = function(obj:nexacro.Grid,e:nexacro.GridClickEventInfo)
{	

	if(e.cell == 0){
	return false;
	
	}else {
	var val = this.fir_code_grid.getColumn(e.row,"FIR_CODE");
	
	this.Main_fir_category_onitemchanged(val)
	}
};

/***************************************************************************************/
