this.BookCafe_CodeManagement_oninit = function(obj:nexacro.Form,e:nexacro.EventInfo)
{
	
	var id = "fir_grid";
	var url = "svc::fir_grid.do";
	var set = "";
	var get = "fir_code_grid = fir_code_grid";
	var arg = "";
