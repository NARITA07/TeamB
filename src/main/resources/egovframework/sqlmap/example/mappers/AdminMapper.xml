<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="bookcafe.nexacro.admin_serviceImpl.AdminMapper">

	<!-- 관리자 코드찾기 -->
	<select id="find_code" resultType="String">
	SELECT COALESCE(MAX(ADMIN_CODE), "0") AS ADMIN_CODE FROM MANAGER;
	</select>
	
	<!-- 회원가입(관리자) -->
	<insert id="insert_data">
	  INSERT INTO MANAGER VALUES (
        #{ADMIN_CODE}, 
        #{ADMIN_ID}, 
        #{ADMIN_PASS}, 
        #{ADMIN_NAME}, 
        #{ADMIN_TEL}, 
        #{ADMIN_EMAIL}, 
        #{ADMIN_ADDRESS}, 
        #{ADMIN_JOINDATE}, 
        #{ADMIN_AUTHORITY}
    );
	</insert>
</mapper>