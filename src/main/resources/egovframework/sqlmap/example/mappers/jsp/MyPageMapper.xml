	<!-- 카페주문내역 조회하기(ORDERS + CART) -->
 	<select id="getMyOrderList" resultType="bookcafe.myPage.service.MyOrderDTO">
 		SELECT O.* , C.PRODUCT_CODE , C.CART_CODE , C.ORDER_QUANTITY 
		FROM ORDERS O 
		JOIN CART C ON O.USER_CODE = C.USER_CODE 
		WHERE O.USER_CODE = #{user_code} 
		GROUP BY O.ORDER_CODE 
		ORDER BY O.PAYMENT_DATE;
  	</select>
	
