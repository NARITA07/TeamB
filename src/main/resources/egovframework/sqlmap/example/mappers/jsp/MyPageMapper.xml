	<!-- 비밀번호 변경하기 -->
	<update id="updatePassword">
		update USER set
			user_pass = #{newPassword}
		where user_id = #{user_id}
	</update>
	
	<!-- 회원정보 수정하기 -->
	<update id="updateMember">
		update USER set
			user_tel = #{user_tel},
			user_email = #{user_email},
			user_address = #{user_address}
		where user_id = #{user_id}
	</update>

	<!-- 회원정보 삭제하기 -->
	<update id="deleteMember">
		update USER set
			user_authority = "5"
		where user_id = #{user_id}
	</update>
	
